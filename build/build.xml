<project name="golibs" default="all">

    <property environment="env"/>
    <property name="env.PONEY_HOME" value="//file1/masa/common/dev/delivery/internal/poney/5.4"/>
    <import file="${env.PONEY_HOME}/poney.xml"/>

    <target name="update">
        <update name="golang" version="1.2.1"/>
        <update name="protobuf" version="2.3.0"/>
    </target>

    <target name="build">
        <go_build/>
        <go cmd="vet"/>
    </target>

    <target name="test">
        <go cmd="test"/>
    </target>

    <target name="package">
        <go_package/>
        <safe-move file="${out.dir}/bin_${platform}.zip">
            <zip destfile="@{file}" duplicate="fail">
                <mappedresources>
                    <fileset dir="${root.dir}/bin" includes="proto*.exe"/>
                    <flattenmapper/>
                </mappedresources>
            </zip>
        </safe-move>
    </target>

    <target name="all" depends="update,build,test,package"/>

</project>
